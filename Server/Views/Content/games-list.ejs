<h1><%= title %></h1>

<div class="row">
    <div class="col">

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <!--same as the number of items in each document in the your collectiom-->
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Developer</th>
                    <th scope="col">Cost</th>
                </tr>
            </thead>
            <tbody>
                <!--Repeatable row template-->
                <% for(let count=0; count < games.length; count++) { %>
                  <tr>
                      <th scope="row"> <%= count + 1 %></th>
                      <td><%= games[count].name %></td>
                      <td><%= games[count].genre %></td>
                      <td><%= games[count].developer %></td>
                      <td><%= games[count].Cost %></td>
                  </tr>                      

                <% } %>
                
            </tbody>
        </table>

    </div>
</div>